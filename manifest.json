{
  "manifest_version": 3,
  "name": "Outlook Web Right-to-Left",
  "version": "1.0.1",
  "description": "Automatically sets Right-to-Left (RTL) text direction and cursor position in Outlook Web email composer.",
  "author": "Assaf",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://outlook.office.com/mail/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "update_url": "https://clients2.google.com/service/update2/crx",
  "homepage_url": "https://github.com/username/assafmail",
  "minimum_chrome_version": "88"
}
